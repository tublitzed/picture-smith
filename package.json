{
  "name": "picture-smith",
  "version": "0.0.0",
  "description": "learning Express and Redux",
  "repository": {
    "type": "git",
    "url": "git://github.com/tublitzed/picture-smith.git"
  },
  "author": "Rachel Tublitz",
  "dependencies": {
    "deep-freeze": "0.0.1",
    "expect.js": "^0.3.1",
    "express": "^4.14.0",
    "foundation-sites": "^6.3.0",
    "jquery": "^3.1.1",
    "oauth": "^0.9.12",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.1",
    "redux": "^3.6.0",
    "the-noun-project": "^2.0.1"
  },
  "devDependencies": {
    "nodemon": "^1.11.0",
    "node-sass": "^4.1.1",
    "browserify": "~> 10.2.4",
    "reactify": "^1.1.1",
    "babel-preset-react": "^6.16.0",
    "eslint-plugin-react": "^6.8.0",
    "babel-eslint": "^6.0.2",
    "babel-preset-es2015": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify-incremental": "^3.0.1",
    "browserify-shim": "^3.8.12",
    "eslint": "^2.7.0"
  },
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js && npm run watch",
    "build-js": "browserify ./app/assets/js/main.js -o ./public/js/main.bundle.js",
    "build-css": "node-sass --output-style=compressed app/assets/scss/main.scss public/css/main.css",
    "watch-js": "nodemon -e js -w ./app/assets/js -x 'npm run build-js'",
    "watch-css": "nodemon -e scss -w ./app/assets/scss -x 'npm run build-css'",
    "build": "npm run build-js & npm run build-css",
    "watch": "npm run watch-js & npm run watch-css"

  },
  "browserify": {
    "transform": [
      [
        "babelify", {
          "presets": [
            "es2015",
            "react"
          ]
        }
      ],
      [
        "browserify-shim"
      ]
    ],
    "alias": [
      "jquery:node_modules/jquery/dist/jquery.min.js"
    ]
  },
  "browserify-shim": {
    "jquery": "$"
  },
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.min.js"
  }
}
